# Server Configuration
PORT=3000
MERCHANT_ID=merchant_poc_123
BASE_URL=https://www.roomstogo.com
DEFAULT_REGION=FL

# Data Source Configuration
# Options: mongodb | file | api
# If not set, auto-detects based on available connection strings
PRODUCT_DATA_SOURCE=mongodb

# MongoDB Configuration (for MongoDB data source)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?authSource=admin&tls=true
MONGO_DB_NAME=rtg-products
PRODUCTS_COLLECTION=products  # Collection containing room packages/sets

# Product Filter Configuration
# Comma-separated list of regions to filter products
PRODUCT_REGIONS=FL,SE,TX
# Comma-separated list of product classes to exclude
EXCLUDED_PRODUCT_CLASSES=SECTIONAL,NESTEDTABLE,END TABLE,COCKTAIL TABLE,CHAIRSIDE TABLE,COCKTAIL OTTOMAN

# API Configuration (for API data source)
# PRODUCTS_API_URL=https://productss3.rtg-dev.com
# PRODUCTS_API_KEY=your_api_key_here

# Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Pricing Configuration
DEFAULT_TAX_RATE=0.08
DEFAULT_CURRENCY=usd
SHIPPING_COST=5.99

# OpenAI Agentic Commerce Protocol Configuration
# OpenAI Webhook URL for sending order events (order.created, order.updated)
OPENAI_WEBHOOK_URL=https://api.openai.com/v1/webhooks/order_events
OPENAI_WEBHOOK_SECRET=whsec_your_webhook_secret_here
OPENAI_API_KEY=sk-your_openai_api_key_here

# API Version Configuration
API_VERSION=2025-09-12
SUPPORTED_API_VERSIONS=2025-09-12,2025-09-29

# Security Configuration
SIGNATURE_ALGORITHM=ES256
WEBHOOK_SIGNATURE_SECRET=your_signature_secret_here

# Checkout Session Configuration
CHECKOUT_SESSION_EXPIRY_MINUTES=30
