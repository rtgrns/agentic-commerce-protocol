POST {{baseUrl}}/checkout_sessions/cs_REPLACE_WITH_SESSION_ID/complete
Content-Type: application/json
API-Version: {{apiVersion}}
Authorization: Bearer test_api_key_123

{
  "payment_data": {
    "token": "tok_visa",
    "provider": "stripe"
  }
